<WizardModal
  ...attributes
  @name={{@name}}
  @title={{this.title}}
  @machine={{this.machine}}
  @registerManager={{@registerManager}}
  @unregisterManager={{@unregisterManager}}
  @onTransition={{@onTransition}}
  @currentState={{@currentState}}
  as |wizard|
>

  {{#let
    (component (concat "goldilocks-story-modal/" wizard.state))
    as |WizardView|
  }}
    <WizardView
      @currentState={{wizard.currentState}}
      @transition={{wizard.transition}}
      @registerUiViewInfo={{wizard.registerUiViewInfo}}
    />
  {{/let}}

</WizardModal>
