<WizardModal
  ...attributes
  @stateDefinition={{hash definition=this.definition guards=this.guards}}
  @registerManager={{@registerManager}}
  @onTransition={{@onTransition}}
  @currentState={{@currentState}}
  @title={{this.title}}
  as |wizard|
>

  {{#let
    (component (concat "goldilocks-story-modal/" wizard.state))
    as |WizardView|
  }}
    <WizardView
      @storyState={{this.storyState}}
      @registerUiViewInfo={{wizard.registerUiViewInfo}}
    />
  {{/let}}

</WizardModal>
